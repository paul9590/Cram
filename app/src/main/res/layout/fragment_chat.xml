<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideChatHo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideChatL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideChatR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewChat"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/guideChatHo1"
            android:background="@drawable/layoutshape"
            app:layout_constraintLeft_toRightOf="@id/guideChatL"
            app:layout_constraintRight_toLeftOf="@id/guideChatR"/>

        <TableRow
            android:id="@+id/trChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewChat"
            app:layout_constraintLeft_toRightOf="@id/guideChatL"
            app:layout_constraintRight_toLeftOf="@id/guideChatR">

            <EditText
                android:id="@+id/editChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="채팅을 입력해 주세요."
                android:imeOptions="actionSend"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/btnChatSend"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="전송"/>

        </TableRow>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>