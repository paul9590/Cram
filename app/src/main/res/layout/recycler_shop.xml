<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgShop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/layoutshape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txtShopMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgShop"
        app:layout_constraintLeft_toLeftOf="@id/imgShop"
        app:layout_constraintRight_toRightOf="@id/imgShop"/>
</androidx.constraintlayout.widget.ConstraintLayout>
